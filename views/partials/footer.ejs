 <script>
      var subscb = document.getElementById('subscb');
      subscb.addEventListener('submit', async (s)=>{
            s.preventDefault();
            var dname = document.getElementById('subsname'); 
            var demail = document.getElementById('subsemailb');  
            var btnsub = document.getElementById('btnsubs');   
            btnsub.innerHTML = 'Subscribing..'; 
            btnsub.style.opacity = '0.2';
            btnsub.disabled = true;  

            const dat = {
                 name : dname.value,
                 email : demail.value,
            }
 
                try{
            const resp = await fetch('/subsbg', {
                 method : 'post',
                 headers : {
                     'Content-Type' : 'application/json',
                     Accept : 'application/json',
                 },
                 body : JSON.stringify(dat),
            });  

            if(!resp.ok) {
                  throw resp;
            }    

            btnsub.innerHTML = 'Subscribed'; 
            btnsub.style.opacity = '2';
            btnsub.disabled = false; 
            
             //Display success message  
  const snotification = document.getElementById('success-notification');
    const successMessage = document.getElementById('success-message');
    
    successMessage.textContent = 'Thanks for subscribing to our newsletter'; 
    snotification.style.display = 'block'; // Show the notification

    // Automatically hide the notification after 7 seconds
    setTimeout(() => {
        snotification.style.display = 'none';
    }, 7000);

            dname.value = '';
            demail.value = '';

     }  catch(err) {
            btnsub.innerHTML = 'Subscribe'; 
            btnsub.style.opacity = '2';
            btnsub.disabled = false; 
            const error = await err.text();
