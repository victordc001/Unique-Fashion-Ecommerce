<!DOCTYPE html>
<html lang="en">
<head> 
    <title>Package Tracking</title> 
    <%- include('../partials/head.ejs') %>
    <style>   
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 40px;
            position: relative;
            overflow: hidden;
        }

        .page-title {
            color: #008080;
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 10px;
            position: relative;
        }

        .tracking-number-display {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        .tracking-number-highlight {
            background: #008080;
            color: white;
            padding: 4px 12px;
            border-radius: 20px;
            font-weight: 500;
        }

        /* Moving vehicle animation */
        .moving-vehicle {
            position: absolute;
            top: -40px;
            left: -100px;
            font-size: 2rem;
            animation: moveVehicle 6s linear infinite;
            z-index: 1;
        }

        @keyframes moveVehicle {
            0% { left: -100px; }
            100% { left: calc(100% + 100px); }
        }

        /* Status-specific animations */
        .vehicle-processing { animation: bounce 2s ease-in-out infinite; }
        .vehicle-shipped { animation: moveVehicle 6s linear infinite; }
        .vehicle-delivered { animation: delivered-pulse 2s ease-in-out infinite; }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        @keyframes delivered-pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        /* Main tracking container */
        .tracking-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin-bottom: 30px;
            border: 2px solid #e0f7f7;
        }

        /* Current status section */
        .current-status {
            background: linear-gradient(135deg, #008080 0%, #20b2aa 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

        .current-status::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: ripple 4s linear infinite;
        }

        @keyframes ripple {
            0% { transform: scale(0); opacity: 1; }
            100% { transform: scale(4); opacity: 0; }
        }

        .status-content {
            position: relative;
            z-index: 2;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .status-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .status-icon {
            font-size: 3rem;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        .status-info h2 {
            font-size: 1.8rem;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .status-description {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .status-time {
            background: rgba(255, 255, 255, 0.2);
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 500;
            backdrop-filter: blur(10px);
        }

        /* Progress tracker */
        .progress-tracker {
            margin: 40px 0;
        }

        .progress-steps {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            margin: 30px 0;
        }

        .progress-line {
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 4px;
            background: #e0e0e0;
            transform: translateY(-50%);
            border-radius: 2px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #008080, #20b2aa);
            border-radius: 2px;
            transition: width 0.5s ease;
        }

        .progress-step {
            background: white;
            border: 4px solid #e0e0e0;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            position: relative;
            z-index: 2;
            transition: all 0.3s ease;
        }

        .progress-step.active {
            border-color: #008080;
            background: #008080;
            color: white;
            transform: scale(1.1);
        }

        .progress-step.completed {
            border-color: #20b2aa;
            background: #20b2aa;
            color: white;
        }

        .step-label {
            text-align: center;
            margin-top: 10px;
            font-size: 0.9rem;
            color: #666;
            font-weight: 500;
        }

        /* Details section */
        .details-section {
            margin-top: 30px;
        }

        .toggle-details {
            background: linear-gradient(135deg, #008080, #20b2aa);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            margin: 0 auto;
        }

        .toggle-details:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 128, 128, 0.3);
        }

        .details-content {
            display: none;
            margin-top: 30px;
            animation: slideDown 0.3s ease;
        }

        .details-content.show {
            display: block;
        }

        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .tracking-events {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 25px;
            border-left: 4px solid #008080;
        }

        .event-item {
            padding: 20px 0;
            border-bottom: 1px solid #e0e0e0;
            position: relative;
            padding-left: 50px;
        }

        .event-item:last-child {
            border-bottom: none;
        }

        .event-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 25px;
            width: 12px;
            height: 12px;
            background: #008080;
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 0 0 2px #008080;
        }

        .event-status {
            font-weight: 600;
            color: #008080;
            margin-bottom: 5px;
        }

        .event-location {
            color: #666;
            margin-bottom: 5px;
        }

        .event-time {
            color: #999;
            font-size: 0.9rem;
        }

        /* Status-specific styles */
        .status-processing { background: linear-gradient(135deg, #ff9800, #ff5722); }
        .status-shipped { background: linear-gradient(135deg, #2196f3, #03a9f4); }
        .status-in-transit { background: linear-gradient(135deg, #9c27b0, #e91e63); }
        .status-out-for-delivery { background: linear-gradient(135deg, #ff5722, #f44336); }
        .status-delivered { background: linear-gradient(135deg, #4caf50, #8bc34a); }

        /* Responsive design */
        @media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .tracking-container {
                padding: 25px 20px;
            }

            .page-title {
                font-size: 2rem;
            }

            .status-content {
                flex-direction: column;
                text-align: center;
            }

            .status-left {
                flex-direction: column;
                text-align: center;
            }

            .progress-steps {
                flex-wrap: wrap;
                gap: 20px;
            }

            .progress-step {
                width: 50px;
                height: 50px;
                font-size: 1.2rem;
            }

            .progress-line {
                display: none;
            }
        }

        @media (max-width: 480px) {
            .page-title {
                font-size: 1.8rem;
            }

            .tracking-container {
                padding: 20px 15px;
            }

            .current-status {
                padding: 20px;
            }

            .status-info h2 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body> 
    <%- include('../partials/topbar.ejs') %>
    
    <div class="main-container">
        <div class="page-header">
            <h1 class="page-title">Track Your Package</h1> 
            <% if (typeof trackingNumber !== 'undefined' && trackingNumber) { %>
                <div class="tracking-number-display">
                    Tracking Number: <span class="tracking-number-highlight"><%= trackingNumber %></span>
                </div>
            <% } %>
            <div class="moving-vehicle" id="movingVehicle">🚚</div>
        </div>

        <div class="tracking-container">
            <% 
            // Determine status details based on theOrderState
            let statusIcon = '📦';
            let statusTitle = 'Order Placed';
            let statusDescription = 'Your order has been placed and is being prepared';
            let statusClass = 'status-processing';
            let vehicleClass = 'vehicle-processing';
            let progressWidth = '25%';
            
            if (typeof theOrderState !== 'undefined' && theOrderState) {
                if (theOrderState.inTransit) {
                    statusIcon = '🚚';
                    statusTitle = 'In Transit';
                    statusDescription = 'Your package is on its way to you';
                    statusClass = 'status-in-transit';
                    vehicleClass = 'vehicle-shipped';
                    progressWidth = '75%';
                } else if (theOrderState.delivered) {
                    statusIcon = '✅';
                    statusTitle = 'Delivered';
                    statusDescription = 'Your package has been successfully delivered';
                    statusClass = 'status-delivered';
                    vehicleClass = 'vehicle-delivered';
                    progressWidth = '100%';
                }
            }
            %>

            <div class="current-status <%= statusClass %>">
                <div class="status-content">
                    <div class="status-left">
                        <div class="status-icon"><%= statusIcon %></div>
                        <div class="status-info">
                            <h2><%= statusTitle %></h2>
                            <div class="status-description"><%= statusDescription %></div>
                        </div>
                    </div>
                    <div class="status-time">
                        <%= new Date().toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                        }) %>
                    </div>
                </div>
            </div>

            <!-- Progress Tracker -->
            <div class="progress-tracker">
                <div class="progress-steps">
                    <div class="progress-line">
                        <div class="progress-fill" style="width: <%= progressWidth %>;"></div>
                    </div>
                    
                    <div class="progress-step-container">
                        <div class="progress-step <%= (theOrderState && ['processing', 'shipped', 'intransit', 'in-transit', 'ondelivery', 'out-for-delivery', 'delivered'].includes(theOrderState.toLowerCase())) ? 'completed' : '' %>">⚙️</div>
                        <div class="step-label">Processing</div>
                    </div>
                    
                    <div class="progress-step-container">
                        <div class="progress-step <%= (theOrderState && ['shipped', 'intransit', 'in-transit', 'ondelivery', 'out-for-delivery', 'delivered'].includes(theOrderState.toLowerCase())) ? 'completed' : (theOrderState && theOrderState.toLowerCase() === 'shipped') ? 'active' : '' %>">📦</div>
                        <div class="step-label">Shipped</div>
                    </div>
                    
                    <div class="progress-step-container">
                        <div class="progress-step <%= (theOrderState && ['intransit', 'in-transit', 'ondelivery', 'out-for-delivery', 'delivered'].includes(theOrderState.toLowerCase())) ? 'completed' : (theOrderState && ['intransit', 'in-transit'].includes(theOrderState.toLowerCase())) ? 'active' : '' %>">🚚</div>
                        <div class="step-label">In Transit</div>
                    </div>
                    
                    <div class="progress-step-container">
                        <div class="progress-step <%= (theOrderState && ['ondelivery', 'out-for-delivery', 'delivered'].includes(theOrderState.toLowerCase())) ? 'completed' : (theOrderState && ['ondelivery', 'out-for-delivery'].includes(theOrderState.toLowerCase())) ? 'active' : '' %>">🚐</div>
                        <div class="step-label">Out for Delivery</div>
                    </div>
                    
                    <div class="progress-step-container">
                        <div class="progress-step <%= (theOrderState && theOrderState.toLowerCase() === 'delivered') ? 'completed active' : '' %>">✅</div>
                        <div class="step-label">Delivered</div>
                    </div>
                </div>
            </div>

            <div class="details-section">
                <button class="toggle-details" id="toggleButton">
                    <span>Show Tracking History</span>
                    <span id="toggleIcon">▼</span>
                </button>
                
                <div class="details-content" id="detailsContent">
                    <div class="tracking-events">
                        <h3 style="color: #008080; margin-bottom: 20px; font-size: 1.3rem;">📋 Tracking History</h3>
                        
                        <% if (typeof theOrderState !== 'undefined' && theOrderState) { %>
                            <div class="event-item">
                                <div class="event-status">Current Status: <%= statusTitle %></div>
                                <div class="event-location">Processing Center</div>
                                <div class="event-time"><%= new Date().toLocaleString() %></div>
                            </div>
                        <% } %>
                        
                        <div class="event-item">
                            <div class="event-status">Order Confirmed</div>
                            <div class="event-location">Order Management System</div>
                            <div class="event-time"><%= new Date(Date.now() - 24*60*60*1000).toLocaleString() %></div>
                        </div>
                        
                        <div class="event-item">
                            <div class="event-status">Payment Processed</div>
                            <div class="event-location">Payment Gateway</div>
                            <div class="event-time"><%= new Date(Date.now() - 25*60*60*1000).toLocaleString() %></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButton = document.getElementById('toggleButton');
            const detailsContent = document.getElementById('detailsContent');
            const toggleIcon = document.getElementById('toggleIcon');
            const movingVehicle = document.getElementById('movingVehicle');

            // Set vehicle animation based on status
            const orderState = '<%= typeof theOrderState !== "undefined" ? theOrderState : "" %>';
            if (orderState) {
                switch(orderState.toLowerCase()) {
                    case 'processing':
                        movingVehicle.className = 'moving-vehicle vehicle-processing';
                        movingVehicle.innerHTML = '⚙️';
                        break;
                    case 'shipped':
                    case 'intransit':
                    case 'in-transit':
                    case 'ondelivery':
                    case 'out-for-delivery':
                        movingVehicle.className = 'moving-vehicle vehicle-shipped';
                        movingVehicle.innerHTML = '🚚';
                        break;
                    case 'delivered':
                        movingVehicle.className = 'moving-vehicle vehicle-delivered';
                        movingVehicle.innerHTML = '✅';
                        break;
                }
            }

            // Toggle details functionality
            toggleButton.addEventListener('click', function() {
                if (detailsContent.classList.contains('show')) {
                    detailsContent.classList.remove('show');
                    toggleButton.querySelector('span').textContent = 'Show Tracking History';
                    toggleIcon.textContent = '▼';
                } else {
                    detailsContent.classList.add('show');
                    toggleButton.querySelector('span').textContent = 'Hide Tracking History';
                    toggleIcon.textContent = '▲';
                }
            });

            // Add smooth scroll animation for better UX
            if (window.location.hash) {
                document.querySelector(window.location.hash).scrollIntoView({
                    behavior: 'smooth'
                });
            }
        });
    </script>
</body>
</html>